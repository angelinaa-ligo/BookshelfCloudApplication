<Window x:Class="_301428777_GuertaLigo__Lab_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Border Background="#4F8A8A8A" DockPanel.Dock="Top" Height="40" Padding="8">
            <TextBlock VerticalAlignment="Center" FontWeight="Bold" Foreground="Black"
               Text="{Binding CurrentUserName, StringFormat=Hello {0}}" />
        </Border>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
            <ItemsControl x:Name="BooksList" ItemsSource="{Binding Books}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightBlue" BorderThickness="1" Margin="0,0,0,10" Padding="5" Width="650"
                                MouseLeftButtonUp="Book_Clicked">
                            <StackPanel>
                                <TextBlock FontWeight="Bold" Text="{Binding Title}" />
                                <TextBlock FontSize="10" Foreground="Gray" Text="{Binding Author}" />
                                <TextBlock FontSize="10" Foreground="DarkGray"
                                           Text="{Binding BookmarkPage, StringFormat=Last page read: {0}}" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Window>
